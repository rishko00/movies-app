<html>
  <head>
    <meta charset="utf-8">
  </head>

  <body>
    <form action="/admin/postmovie" method="post">
      Name: <input type="text" name="title"/>
      Year: <input type="number" min="1900" max="2021" name="year"/>
      Type: <select name="type">
		<option value="Серіал">Серіал</option>
		<option value="Фільм">Фільм</option>
	    </select>
      Image: <input type="file" name="image">
      Genre: <input type="text" name="genre"/>
      Director: <input type="text" name="director"/>
      Info: <input type="text" name="info"/>
      Duration: <input type="number" name="duration"/> minutes
      Actors: <input type="text" name="actors"/>
      Country: <input type="text" name="country"/>
      <input type="submit" value="Add"/>
    </form>
  </body>
</html>
